@model NumberOfProjectsUnderSDG
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Home.css" rel="stylesheet" />

<header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Project Log</h1>
                    <span class="subheading">Projects Undertaken by UITS Meeting the SDGs</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid mb-5">
    <div class="text-center mt-5">
        <h1>Our Projects</h1>
    </div>
    <div class="row">

        @for (int i = 0; i < Model._Sdg.Count; i++)
        {
            <div class="col-md-4">
                <div class="box">
                    <a asp-controller="Detail" asp-action="Index" asp-route-id="@Model._Sdg[i].GoalId" style="color:black;">
                        <div class="our-services settings">
                            <div class="icon"> <img src="@Url.Content("~/pics/" + @Model._Sdg[i].GoalId +".png")" height="100" width="100"> </div>
                            <h4 style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:1; -webkit-box-orient:vertical; ">@Model._Sdg[i].Name</h4>
                            <p style=" overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; ">@Model._Sdg[i].Description</p>
                            <p class="text-muted h6 font-weight-light"> Total number of project : @Model.numberUnderSdg[i]</p>

                        </div>
                    </a>

                </div>
            </div>
        }



    </div>
</div>
<!-- Modal -->
